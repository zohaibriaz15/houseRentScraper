<!-- Display the description of a single scrapper -->

<nav class="navbar navbar-expand-lg navbar-dark bg-success">
  <ul class="navbar-nav ml-auto">
      <li class="nav-item navbar-brand active">
        <%= link_to 'Rent-House', root_path, class: 'nav-link active' %>
      </li>
    </ul>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
          <%= link_to 'Home', root_path, class: 'nav-link' %>
      </li>
      <li class="nav-item">
          <%= link_to "Back to Cards", show_path(marla_size: @scrapper.area), class: "nav-link" %>
      </li>
    </ul>
  </div>
</nav>



<div class="container mt-3">
  <div class="row justify-content-center">
    <% if @scrapper.present? %>
      <div class="col-md-6 mb-4">
        <div class="card">
          <div class="card-header"><h3 class="text-center"> Area: <%= @scrapper.area %> </h3></div>
          <% if @scrapper.image.present? %>
            <div class="card-img-top">
              <%= image_tag @scrapper.image, class: "img-fluid rounded", alt: "Property Image" %>
            </div>
          <% else %>
            <div class="card-img-top">
              <%= image_tag "https://images.zameen.com/smap/800/600/31.463074/74.321506/image.jpeg?quality=80&imageformat=jpeg", class: "img-fluid rounded", alt: "Default Image" %>
            </div>
          <% end %>
          <div class="card-body">
            <h5 class="card-title"><%= @scrapper.price %></h5>
            <p class="card-text">Bed: <%= @scrapper.bed %> Bath: <%= @scrapper.bath %></p>
            <p class="card-text"><%= @scrapper.location %></p>
            <p class="card-text"><%= @scrapper.description %></p>
          </div>
        </div>
      </div>
    <% else %>
      <div class="col-12">
        <p class="text-center">No data found.</p>
      </div>
    <% end %>
  </div>
</div>

